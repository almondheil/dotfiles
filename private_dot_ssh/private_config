# Defaults for all hosts
Host *
  ForwardAgent yes  # Forward ssh keys (in case of further connection)
  IdentityFile ~/.ssh/id_ed25519  # Use default key

#
# Home Network
#

# TrueNAS
Host truenas
  # first IP is on home network, other should work from school
  # Hostname 192.168.50.67
  Hostname 73.98.89.95
  Port 27182

#
# USRC
#

Host usrc-new
  Hostname usrc-new.newmexicoconsortium.org
  User aheil
  IdentityFile ~/.ssh/id_usrc

  # Enable shared connection through a socket in my home directory
  ServerAliveInterval 300
  ControlMaster auto
  ControlPath ~/.ssh/sockets/ssh_mux_%h_%p_%r

Host usrc-cm
  Hostname cm.si.usrc
  User aheil
  IdentityFile ~/.ssh/id_usrc
  ProxyJump usrc-new

